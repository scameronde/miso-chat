name: chatclient
version: 0.1.0
synopsis: Miso Chat Client
license: BSD3
cabal-version: 1.24
build-type: Simple

library
  hs-source-dirs:   shared

  exposed-modules:  Businesstypes
                  , Time
                  , Counter
                  , Home
                  , Login
                  , ChatRooms
                  , ChatRoom
                  , Chat

  if impl(ghcjs)
    build-depends:  base
                  , aeson
                  , miso
                  , servant
                  , servant-client-ghcjs
                  , text
                  , time
  else
    build-depends:  base
                  , aeson
                  , miso
                  , servant
                  , text
                  , time


  ghc-options:      -Wall

  default-language: Haskell2010


executable server
  hs-source-dirs:   server
  main-is:          Server.hs

  if impl(ghcjs)
    buildable:      False
  else
    build-depends:  base
                  , base-compat
                  , chatclient
                  , aeson
                  , lucid
                  , miso
                  , optparse-applicative
                  , servant
                  , servant-server
                  , servant-websockets
                  , text
                  , time
                  , warp
                  , wai-extra
                  , websockets

  ghc-options:      -Wall

  default-language: Haskell2010


executable client
  hs-source-dirs:   client
  main-is:          Client.hs

  if !impl(ghcjs)
    buildable:      False
  else
    build-depends:  base
                  , chatclient
                  , aeson
                  , miso
                  , servant
                  , servant-client-ghcjs
                  , time

  ghcjs-options:      -Wall

  default-language: Haskell2010

